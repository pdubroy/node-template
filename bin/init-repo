#!/bin/bash

set -e # Fail on any error

PACKAGE_NAME=$(basename $(pwd))

mkdir dist lib third_party
sed -i '' "s/PACKAGE_NAME/${PACKAGE_NAME}/g" package.json
git remote rm origin
npm init
git mv test/test-NAME.js test/test-${PACKAGE_NAME}.js
npm install

git rm bin/init-repo
git reset --soft ceac6c && git add . && git commit --no-verify --amend -m 'Initial commit.'
cp bin/pre-commit .git/hooks/pre-commit
