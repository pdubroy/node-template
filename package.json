{
  "name": "",
  "version": "0.1.0",
  "author": "Patrick Dubroy <pdubroy@gmail.com> (http://dubroy.com)",
  "license": "MIT",
  "dependencies": {},
  "devDependencies": {
    "browserify": "^14.4.0",
    "faucet": "0.0.1",
    "nodemon": "^1.12.1",
    "pre-commit": "^1.2.2",
    "semistandard": "^11.0.0",
    "tape": "^4.8.0",
    "watchify": "^3.9.0"
  },
  "scripts": {
    "build": "browserify . $npm_package_browserify_opts",
    "watch": "watchify -v . $npm_package_browserify_opts",
    "test": "tape test/*.js | faucet",
    "test-watch": "nodemon --exec 'npm test'",
    "prepublish": "npm run build && npm run test && npm run lint",
    "lint": "semistandard index.js lib test"
  },
  "browserify": {
    "opts": "-d -s PACKAGE_NAME -o dist/PACKAGE_NAME.js"
  },
  "pre-commit": ["test", "lint"],
  "main": "index.js",
  "directories": {
    "test": "test"
  }
}
